{% extends 'admin/main.html.twig' %}

{% block title %}Партнеры - Добавить новый{% endblock %}

{% block content %}

{% include('admin/city/include/action.html.twig') %}

<h2>Добавление</h2>
<div class="col-md-6">
    {{ form_start(form) }}
    <div class="box-body">
        <div class="form-group">
            {{ form_label(form.name) }}
            {{ form_widget(form.name, {'attr':{'class':'form-control'}}) }}
        </div>
        <div class="form-group">
            {{ form_label(form.shortInfo) }}
            {{ form_widget(form.shortInfo, {'attr':{'class':'form-control'}}) }}
        </div>
        <div class="form-group">
            {{ form_label(form.longInfo) }}
            {{ form_widget(form.longInfo, {'attr':{'class':'form-control'}}) }}
        </div>
        <div class="form-group">
            {{ form_label(form.priority) }}
            {{ form_widget(form.priority, {'attr':{'class':'form-control'}}) }}
        </div>
        <div class="form-group">
            {{ form_label(form.logo) }}
            {{ form_widget(form.logo, {'attr':{'class':'form-control'}}) }}
        </div>
        <input class="btn btn-success btn-sm" type="submit" value="Добавить" />
    </div>
    {{ form_end(form) }}
</div>

{% endblock %}

{% block javascript_vendor %}
    <script>
        $(document).ready(function() {
            CKEDITOR.replace( 'appbundle_partner_longInfo' );
        });
    </script>
    {{ parent() }}
{% endblock %}

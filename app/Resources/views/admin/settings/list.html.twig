{% extends 'admin/main.html.twig' %}

{% block title %}Настройки сайта{% endblock %}

{% block content %}

{% include('admin/settings/include/action.html.twig') %}

<h3>Список</h3>
<div class="table-responsive">
    <table class="table table-hover admin-control">
        <thead class="thead-dark">
            <tr>
                <th class="id">id</th>
                <th>Телефон</th>
                <th>Почта</th>
                <th>Город</th>
                <th>Instagram</th>
                <th>Vk</th>
                <th>Facebook</th>
                <th>Активность</th>
                <th class="action">Настройки</th>
            </tr>
        </thead>
        <tbody>
        {% for setting in settings %}
            <tr>
                <td class="id">{{ setting.id }}</td>
                <td>{{ setting.phone }}</td>
                <td>{{ setting.mail }}</td>
                <td>{{ setting.location }}</td>
                <td>{{ setting.instagram }}</td>
                <td>{{ setting.vk }}</td>
                <td>{{ setting.facebook }}</td>
                <td style="text-align: center">
                    <label style="margin: 0">
                        <input type="radio" name="activ-settings" class="activated-settings label__checkbox" data-id="{{ setting.id }}" type="checkbox" {% if setting.isActive %}checked{% endif %}>
                        <span class="label__text">
                              <span class="label__check">
                                <i class="fa fa-check icon"></i>
                              </span>
                            </span>
                    </label>
                </td>
                <td class="action">
                    <a href="{{ path('admin.settings.edit', { 'setting': setting.id }) }}" class="btn btn-outline-primary btn-sm ml-1" title="Редактировать">
                        <i class="fas fa-pencil-alt"></i>
                    </a>
                    <a href="{{ path('admin.settings.delete', { 'setting': setting.id }) }}" class="btn btn-outline-danger btn-sm ml-1" title="Удалить">
                        <i class="fas fa-times"></i>
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>

{% endblock %}

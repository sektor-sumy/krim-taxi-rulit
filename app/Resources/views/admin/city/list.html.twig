{% extends 'admin/main.html.twig' %}

{% block content %}

{% include('admin/city/include/action.html.twig') %}

<h3>Список</h3>
<div class="table-responsive">
    <table class="table table-hover admin-control">
        <thead class="thead-dark">
            <tr>
                <th class="id">id</th>
                <th>Название</th>
                <th class="action">Настройки</th>
            </tr>
        </thead>
        <tbody>
        {% for city in citys %}
            <tr>
                <td class="id">{{ city.id }}</td>
                <td>{{ city.name }}</td>
                <td class="action">

                    <a href="{{ path('admin.city.edit', { 'city': city.id }) }}" class="btn btn-outline-primary btn-sm ml-1">
                        <i class="fas fa-pencil-alt"></i>
                    </a>
                    <a href="{{ path('admin.city.delete', { 'city': city.id }) }}" class="btn btn-outline-danger btn-sm ml-1">
                        <i class="fas fa-times"></i>
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>

{% endblock %}

{% extends 'admin/main.html.twig' %}

{% block title %}Обратные звонки - Список{% endblock %}

{% block content %}

{% include('admin/callback/include/action.html.twig') %}

<h3>Список</h3>
<div class="table-responsive">
    <table class="table table-hover admin-control">
        <thead class="thead-dark">
            <tr>
                <th class="id">id</th>
                <th>Имя</th>
                <th>Телефон</th>
                <th class="action">Настройки</th>
            </tr>
        </thead>
        <tbody>
        {% for callback in callbacks %}
            <tr {% if callback.viewedAt == false %} class="not-view" {% endif %}>
                <td class="id">{{ callback.id }}</td>
                <td>{{ callback.name }}</td>
                <td>{{ callback.phone }}</td>
                <td class="action">
                    {% if callback.viewedAt == false %}
                        <a href="{{ path('admin.callback.viewed', { 'callback': callback.id }) }}" class="btn btn-outline-success btn-sm ml-1" title="Просмотрено">
                            <i class="fas fa-check"></i>
                        </a>
                    {% endif %}
                    <a href="{{ path('admin.callback.delete', { 'callback': callback.id }) }}" class="btn btn-outline-danger btn-sm ml-1" title="Удалить">
                        <i class="fas fa-times"></i>
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>

{% endblock %}

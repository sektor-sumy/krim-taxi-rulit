{% extends 'frontend/main.html.twig' %}

{% block content %}
    {% include 'frontend/content/order-cars.html.twig' %}
    <div class="container">
        <div class="row">
            <div class="col-md-6">

                {{ form_start(form) }}
                <div class="box-body">
                    <div class="form-group">
                        {{ form_label(form.car) }}
                        {{ form_widget(form.car, {'attr':{'class':'form-control'}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(form.name) }}
                        {{ form_widget(form.name, {'attr':{'class':'form-control'}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(form.phone) }}
                        {{ form_widget(form.phone, {'attr':{'class':'form-control'}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(form.text) }}
                        {{ form_widget(form.text, {'attr':{'class':'form-control'}}) }}
                    </div>
                    <input class="btn btn btn-primary color btn-sm" type="submit" value="Отправить" />
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
    {{ parent() }}
{% endblock %}


{% block javascript_vendor %}
    {{ parent() }}
    <script>
        $('a[href="#transport-class-{{ transportClasses[0].nameTranslate|default('') }}"]').tab('show')
    </script>
{% endblock %}